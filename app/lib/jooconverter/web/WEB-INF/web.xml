<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <listener>
	<listener-class>net.sf.jooreports.converter.web.WebAppContext</listener-class>
  </listener>

  <servlet>
	<servlet-name>DocumentConverterServlet</servlet-name>
	<servlet-class>net.sf.jooreports.converter.web.DocumentConverterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DocumentConverterServlet</servlet-name>
    <url-pattern>/converted/*</url-pattern>
  </servlet-mapping>

</web-app>
